<div class="container">
    <div class="col-12">


      {{#if message}}
        <div class="alert alert-danger" role="alert">
            <p>{{message}}</p>
        </div>
      {{/if}}

    </div>
    <form id="register-form" novalidate action="/user-login/login" method="post" role="form">
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="username">Name</label>
      <input type="text" class="form-control" id="username" name="username" value="{{post.username}}">
    </div>

    <div class="form-group col-md-12">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" >
    </div>
  </div>

  </div>
  <div class="form-group">

  </div>
  <div class="flex">
       <button type="submit" class="btn btn-success text-center">Register now</button>
  </div>

</form>

</div>

